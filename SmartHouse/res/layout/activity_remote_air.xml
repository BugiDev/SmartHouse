<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/smart_house_bcg_pure"
    tools:context=".RemoteAir" >

    <ImageButton
        android:id="@+id/remote_air_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_transparent_button_full"
        android:src="@drawable/led_on"
        android:contentDescription="@string/remote_air_power_desc" />

    <ImageButton
        android:id="@+id/remote_air_t_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/remote_air_power"
        android:layout_alignLeft="@+id/remote_air_t_down"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_transparent_button"
        android:src="@drawable/t_up"
        android:contentDescription="@string/remote_air_t_up_desc" />

    <ImageButton
        android:id="@+id/remote_air_t_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remote_air_power"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_transparent_button"
        android:src="@drawable/t_down"
        android:contentDescription="@string/remote_air_t_down_desc" />

    <TextView
        android:id="@+id/remote_air_text_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/remote_air_t_up"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/remote_air_room"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/remote_air_text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remote_air_t_down"
        android:layout_toLeftOf="@+id/remote_air_t_down"
        android:text="@string/remote_air_temperature"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/remote_air_text_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remote_air_t_down"
        android:layout_toRightOf="@+id/remote_air_t_down"
        android:text="@string/remote_air_mode"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue" />

</RelativeLayout>