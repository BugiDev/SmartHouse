<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smart_house_bcg_pure"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RemoteTV" >

    <ImageButton
        android:id="@+id/tv_remote_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_transparent_button_full"
        android:src="@drawable/led_on"
        android:contentDescription="@string/remote_tv_power_desc" />

    <ImageButton
        android:id="@+id/tv_remote_v_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_remote_power"
        android:layout_toRightOf="@+id/tv_remote_power"
        android:background="@drawable/custom_transparent_button"
        android:src="@drawable/v_down"
        android:contentDescription="@string/remote_tv_v_down_desc" />

    <ImageButton
        android:id="@+id/tv_remote_ch_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_remote_v_down"
        android:layout_toLeftOf="@+id/tv_remote_power"
        android:background="@drawable/custom_transparent_button"
        android:src="@drawable/ch_down"
        android:contentDescription="@string/remote_tv_ch_down_desc" />

    <ImageButton
        android:id="@+id/tv_remote_ch_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_remote_power"
        android:layout_toLeftOf="@+id/tv_remote_power"
        android:background="@drawable/custom_transparent_button"
        android:src="@drawable/ch_up"
        android:contentDescription="@string/remote_tv_ch_up_desc" />

    <ImageButton
        android:id="@+id/tv_remote_v_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_remote_power"
        android:layout_alignLeft="@+id/tv_remote_v_down"
        android:background="@drawable/custom_transparent_button"
        android:src="@drawable/v_up"
        android:contentDescription="@string/remote_tv_v_up_desc" />

    <TextView
        android:id="@+id/tv_remote_text_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_remote_ch_up"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/remote_tv_room"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/tv_remote_text_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_remote_text_channel"
        android:layout_alignLeft="@+id/tv_remote_v_down"
        android:text="@string/remote_tv_volume"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/tv_remote_text_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_remote_ch_down"
        android:layout_below="@+id/tv_remote_ch_down"
        android:layout_marginTop="30dp"
        android:text="@string/remote_tv_channel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue" />

</RelativeLayout>