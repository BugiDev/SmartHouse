<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity"
    android:background="@drawable/smart_house_bcg" >

    <CheckBox
        android:id="@+id/settings_sound_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/settings_sound_text"
        android:textColor="@color/blue" />

    <CheckBox
        android:id="@+id/settings_vibra_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settings_sound_check"
        android:layout_below="@+id/settings_sound_check"
        android:layout_marginTop="15dp"
        android:text="@string/settings_vibra_text"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/settings_button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_vibra_check"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/settings_button_text"
        android:background="@drawable/custom_blue_button"
        android:textColor="@color/blue"
        android:textColorHighlight="@color/blue"
        android:textColorHint="@color/blue" />

</RelativeLayout>
