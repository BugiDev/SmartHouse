<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.montequality.smarthouse"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.montequality.smarthouse.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.montequality.smarthouse.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible|stateVisible" >
        </activity>
        <activity
            android:name="com.montequality.smarthouse.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.montequality.smarthouse.InfoActivity"
            android:label="@string/title_activity_info"
            android:parentActivityName="com.montequality.smarthouse.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.montequality.smarthouse.HomeActivity" />
        </activity>
        <activity
            android:name="com.montequality.smarthouse.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.montequality.smarthouse.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.montequality.smarthouse.HomeActivity" />
        </activity>
        <activity
            android:name="com.montequality.smarthouse.MainDevicesListActivity"
            android:label="@string/title_activity_main_devices_list"
            android:parentActivityName="com.montequality.smarthouse.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.montequality.smarthouse.HomeActivity" />
        </activity>
    </application>

</manifest>